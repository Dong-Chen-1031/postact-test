{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "module": "ESNext",

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,

    "outDir": "dist",
    "rootDir": "src",

    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,

    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
}
